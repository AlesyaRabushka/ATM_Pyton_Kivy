
<WelcomeScreen>
    BoxLayout:
        orientation: "vertical"
        adaptive_size: True
        Label:
            id: label
            text: '[color=#FF9977]Выберите карточку[/color]'
            markup: True

        Button:
            text: 'Alesya Rabushka'
            on_press: root.choose_card(1)
            on_release: app.root.change_screen('pin_screen')


        Button:
            text: 'Alena Sklema'
            on_press: root.choose_card(2)
            on_release: app.root.change_screen('pin_screen')

        Button:
            text: 'Aleksey Smelov'
            on_press: root.choose_card(3)
            on_release: app.root.change_screen('pin_screen')

        GridLayout:
            cols:1



            TextInput:
                hint_text: '375__ ___ __ __'
                on_text: root.set_phone_number(self.text)



<PinScreen>
    BoxLayout:
        orientation: "vertical"
        adaptive_size: True

        Label:
            id: pin_label
            text: '[color=#FF9966]Введите пин-код[/color]'
            markup: True

        TextInput:
            hint_text: 'ПИН-КОД'
            on_text: root.set_pin(self.text)
            input_filter: 'int'

        Button:
            text: 'ВВОД'
            on_press: root.check_pin()

        Button:
            text: 'next'
            on_press: app.root.change_screen('menu_screen')




<MenuScreen>
    BoxLayout:
        orientation: "vertical"
        adaptive_size: True


        Button:
            text: 'balance'
            on_press: app.root.change_screen('balance_screen')

        Button:
            text: 'money out'
            on_press: app.root.change_screen('money_out_choice_screen')
        Button:
            text: 'money in'
            on_press: app.root.change_screen('money_in_screen')

        Button:
            text: 'telephone payment'
            on_press: app.root.change_screen('telephone_payment')
        Button:
            text: 'BYNtoUSD'
            on_press: app.root.change_screen('byn_to_usd')
        Button:
            text: 'USDtoBYN'
            on_press: app.root.change_screen('usd_to_byn')


