
<WelcomeScreen>
    BoxLayout:
        orientation: "vertical"
        adaptive_size: True
        Label:
            id: label
            text: '[color=#FF9977]введите пин-код[/color]'
            markup: True
        GridLayout:
            cols:2
            TextInput:
                hint_text: 'ПИН-КОД'
                on_text: root.set_pin(self.text)
                input_filter: 'int'

            TextInput:
                hint_text: 'money'
                on_text: root.set_money(self.text)
                input_filter: 'int'

        Button:
            text: 'choose card'
            on_press: root.choose_card(1)
        Button:
            text: 'check pin'
            on_press: root.check_pin()
        Button:
            text: 'money out'
            on_press: root.money_out()
        Button:
            text: 'money in'
            on_press: root.money_in()

        Button:
            text: 'telephone payment'
            on_press: root.telephone_payment()
        Button:
            text: 'transaction to USD'
            on_press: root.fromBUNtoUSD()
        Button:
            text: 'transaction to BYN'
            on_press: root.fromUSDtoBUN()
        Button:
            text: 'change pin'
            on_press: root.change_pin()


